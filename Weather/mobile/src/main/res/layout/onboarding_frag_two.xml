<?xml version="1.0" encoding="utf-8"?>
<com.heinrichreimersoftware.materialintro.view.parallax.ParallaxLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/iconCurrentConditions"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_sunny_color"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        app:layout_parallaxFactor=".5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick, and accurate"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_24sdp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:text="Get accurate reports for your location quickly and easily."
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_40sdp"
        android:textColor="@color/colorWhite"/>



</com.heinrichreimersoftware.materialintro.view.parallax.ParallaxLinearLayout>