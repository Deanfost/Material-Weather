<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="@dimen/_16sdp"
    android:id="@+id/change_location_settings_fragment_layout">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_locationunavailable_color"
        android:layout_marginTop="@dimen/_55sdp"
        android:tint="@color/location_red"
        android:layout_marginBottom="@dimen/_24sdp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="@dimen/_165sdp"
        android:layout_height="wrap_content"
        android:text="Material Weather requires your location to function properly. Please enable location services on your device."
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_45sdp"/>

    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="Enable"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnEnableLocationSettings"/>

</LinearLayout>