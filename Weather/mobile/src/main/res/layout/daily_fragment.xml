<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_6sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_43sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_ripple_blue"
            android:layout_margin="@dimen/_10sdp"
            android:elevation="@dimen/_2sdp"
            android:alpha=".65"
            android:clickable="true"
            android:id="@+id/dailyLayout"
            android:padding="@dimen/_16sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textSize="@dimen/_22sdp"
                android:textColor="@color/colorAccent"
                android:id="@+id/dailyTitle"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chance of rain thoughout the week, with temperatures bottoming out at 37&#xb0; on Sunday."
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorAccent"
                android:id="@+id/dailyDescription"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_below="@id/dailyTitle"
                android:layout_marginBottom="@dimen/_20sdp"/>

            <!-- Column descriptions for the grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_below="@+id/dailyDescription"
                android:id="@+id/dailyColDescLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyColDesc1"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi/Lo"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyColDesc2"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precip"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyColDesc3"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cond"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyColDesc4"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_10sdp" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dailyGrid"
                android:rowCount="4"
                android:columnCount="4"
                android:layout_below="@+id/dailyColDescLayout">

                <!-- First row -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/daily1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="74&#xb0;/56&#xb0;"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/daliyHL1"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20%"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyPre1"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_sunny_white"
                    android:scaleType="fitCenter"
                    android:id="@+id/dailyCond1"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_columnWeight="1" />

                <!-- Second Row -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/daily2"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72&#xb0;/53&#xb0;"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/daliyHL2"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyPre2"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_partlycloudy_white"
                    android:scaleType="fitCenter"
                    android:id="@+id/dailyCond2"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"/>

                <!-- Third Row -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/daily3"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56&#xb0;/47&#xb0;"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyHL3"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyPre3"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnWeight="1" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_partlycloudy_white"
                    android:scaleType="fitCenter"
                    android:id="@+id/dailyCond3"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:layout_columnWeight="1"/>

                <!-- Fourth Row -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/daily4"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="57&#xb0;/42&#xb0;"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyHL4"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35%"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/dailyPre4"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_columnWeight="1" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_partlycloudy_white"
                    android:scaleType="fitCenter"
                    android:id="@+id/dailyCond4"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:layout_columnWeight="1"/>


            </GridLayout>

            <!-- Details "button" and layout for daily layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:layout_below="@id/dailyGrid"
                android:gravity="bottom|right"
                android:paddingBottom="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/dailyDetailsBtn"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
</LinearLayout>