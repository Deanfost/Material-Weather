<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFakePrimary</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <!-- Material Theme -->
    <style name="MaterialTheme" parent="MaterialTheme.Base">
    </style>

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorFakePrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Activity theme -->
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <!-- Specify transitions -->
        <!--<item name="android:windowEnterTransition">@transition/slide_in_left</item>-->
        <!--<item name="android:windowExitTransition">@transition/slide_out_right</item>-->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Onboarding theme -->
    <style name="OnboardingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Settings theme yellow-->
    <style name="SettingsThemeYellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorAccent">@color/colorYellow</item>
        <!--<item name="android:alertDialogTheme">@style/ListPreferenceYellow</item>-->
        <item name="android:dialogPreferenceStyle">@style/ListPreferenceYellow</item>
    </style>

    <!-- Settings theme blue-->
    <style name="SettingsThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlue</item>
        <!--<item name="android:alertDialogTheme">@style/ListPreferenceBlue</item>-->
        <item name="android:dialogPreferenceStyle">@style/ListPreferenceBlue</item>
    </style>

    <!-- Settings theme orange-->
    <style name="SettingsThemeOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorAccent">@color/colorOrange</item>
        <!--<item name="android:alertDialogStyle">@style/ListPreferenceOrange</item>-->
        <item name="android:dialogPreferenceStyle">@style/ListPreferenceOrange</item>
    </style>

    <!-- Settings theme purple-->
    <style name="SettingsThemePurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorAccent">@color/colorPurple</item>
        <item name="android:dialogPreferenceStyle">@style/ListPreferencePurple</item>
        <!--<item name="android:alertDialogTheme">@style/ListPreferencePurple</item>-->
    </style>

    <!-- Custom alert dialog theme yellow-->
    <style name="ListPreferenceYellow" parent="android:Theme.Material.Dialog.Alert">
        <item name="colorAccent">@color/colorYellow</item>
        <item name="android:colorAccent">@color/colorYellow</item>
        <item name="android:colorPrimaryDark">@color/colorYellow</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorTertiary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    <!-- Custom alert dialog theme blue-->
    <style name="ListPreferenceBlue" parent="android:Theme.Material.Dialog.Alert">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:colorAccent">@color/colorBlue</item>
        <item name="android:colorPrimaryDark">@color/colorBlue</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorTertiary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Custom alert dialog theme orange-->
    <style name="ListPreferenceOrange" parent="android:Theme.Material.Dialog.Alert">
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:colorAccent">@color/colorOrange</item>
        <item name="android:colorPrimaryDark">@color/colorOrange</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorTertiary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Custom alert dialog theme purple-->
    <style name="ListPreferencePurple" parent="android:Theme.Material.Dialog.Alert">
        <item name="colorAccent">@color/colorPurple</item>
        <item name="android:colorAccent">@color/colorPurple</item>
        <item name="android:colorPrimaryDark">@color/colorPurple</item>
        <!--<item name="android:textColorPrimary">@color/colorBlack</item>-->
        <!--<item name="android:textColorTertiary">@color/colorBlack</item>-->
        <!--<item name="android:textColorSecondary">@color/colorBlack</item>-->
        <item name="android:background">@color/colorWhite</item>
    </style>
</resources>